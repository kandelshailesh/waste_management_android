<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:paddingHorizontal="5dp"
    android:paddingVertical="10dp"
    tools:context=".BlogRows">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:elevation="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:paddingVertical="20dp"
        android:layout_weight="0.3"
        android:id="@+id/blog_image"
        android:src="@drawable/background">
    </ImageView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:paddingHorizontal="5dp"
        android:paddingVertical="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blog_id"
            android:visibility="gone"
            android:textSize="24sp"
            android:fontFamily="@font/montaga"
            android:text="Blogs first 1"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blog_title"
            android:textSize="24sp"
            android:fontFamily="@font/montaga"
            android:textColor="@color/black"
            android:text="Blogs first 1"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          android:id="@+id/blog_description"
            android:textSize="18sp"
            android:fontFamily="@font/montaga"
            android:ellipsize="end"
            android:maxLines="4"
            android:singleLine="false"
            android:text="Hello hw  are you adjfkadfakjfkajkfjakfjakjfkajfakdfjakjfkkfjakfjakkfajdkfjajdfk jakjdfkajdfkjadkfjadkfjakdjfkadjf">
        </TextView>
    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>