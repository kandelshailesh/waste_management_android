<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileFragment"

    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/background"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="100dp"
                    app:strokeWidth="1dp"
                    android:elevation="20dp"
                    app:strokeColor="@color/black">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/profile_image"
                        android:scaleType="fitXY"
                        android:src="@drawable/button_bg" />
                </com.google.android.material.card.MaterialCardView>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:translationZ="20dp"
                android:layout_marginLeft="-30dp"
                android:id="@+id/change_profile_icon"
                android:src="@drawable/ic_baseline_camera_alt_24">
            </ImageView>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/main_bg"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
app:cardElevation="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_fullname"
                        android:textSize="25dp"
                        android:fontFamily="@font/montaga"
                        android:text="Fullname:Shailesh Kandel">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_username"
                        android:textSize="25dp"
                        android:fontFamily="@font/montaga"
                        android:text="Username:kandelshailesh">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_email"
                        android:textSize="25dp"
                        android:fontFamily="@font/montaga"
                        android:text="Email:shailesh123@gmail.com">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_address"
                        android:textSize="25dp"
                        android:fontFamily="@font/montaga"
                        android:text="Address:shailesh123@gmail.com">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_phone"
                        android:textSize="25dp"
                        android:fontFamily="@font/montaga"
                        android:text="Mobile No:9867784128">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_editBtn"
                        android:textSize="15dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/montaga"
                        android:text="EDIT PROFILE">
                    </Button>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_changePasswordBtn"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/montaga"
                        android:text="CHANGE PASSWORD">
                    </Button>
                </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>
</LinearLayout>
</ScrollView>
