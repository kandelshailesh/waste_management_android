<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CollectionRequestFragment"
    android:background="@drawable/background"
    android:id="@+id/collection_request_fragment"
    android:padding="20dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:hint="Location"
        android:layout_weight="0.9"
      app:boxBackgroundColor="@color/white"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/collection_request_location"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton android:text="Get Current Location"
        android:layout_height="wrap_content"
        android:id="@+id/get_location"
        android:background="@color/white"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_my_location_24"
        android:layout_width="wrap_content"></ImageButton>
</LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="start"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="start|top"
            android:hint="Description..."
            android:background="@color/white"
            android:id="@+id/collection_request_remarks"
            android:inputType="text|textMultiLine"
            >
        </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/collection_request_btn"
        android:background="@drawable/input_bg"
        android:text="MAKE REQUEST">
    </Button>

</LinearLayout>