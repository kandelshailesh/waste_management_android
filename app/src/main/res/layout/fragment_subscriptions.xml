<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#EEEEEE"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ui.SubscriptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <Button
            android:id="@+id/subscription_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUY SUBSCRIPTION"
            android:visibility="gone"></Button>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:visibility="gone"
            android:id="@+id/subscription_layout"
            android:paddingVertical="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:fontFamily="@font/montaga"
                            android:text="Package Name:"
                            android:textColor="@color/black"
                            android:textSize="20sp"></TextView>

                        <TextView
                            android:id="@+id/subscription_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.95"
                            android:fontFamily="@font/montaga"
                            android:text="Rs.3000"
                            android:textSize="20sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:fontFamily="@font/montaga"
                            android:text="Charge:"

                            android:textColor="@color/black"
                            android:textSize="20sp"></TextView>

                        <TextView
                            android:id="@+id/subscription_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.95"
                            android:fontFamily="@font/montaga"
                            android:text="Rs.3000"
                            android:textSize="20sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:textColor="@color/black">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:fontFamily="@font/montaga"
                            android:text="Activation Date:"
                            android:textColor="@color/black"
                            android:textSize="20sp"></TextView>

                        <TextView
                            android:id="@+id/subscription_activation_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.95"
                            android:fontFamily="@font/montaga"
                            android:text="Title"
                            android:textSize="20sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:fontFamily="@font/montaga"
                            android:text="Renewal Date:"
                            android:textColor="@color/black"
                            android:textSize="20sp"></TextView>

                        <TextView
                            android:id="@+id/subscription_renewal_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.95"
                            android:fontFamily="@font/montaga"
                            android:text="Title"
                            android:textSize="20sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:fontFamily="@font/montaga"
                            android:text="Status:"
                            android:textColor="@color/black"
                            android:textSize="20sp"></TextView>

                        <TextView
                            android:id="@+id/subscription_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.95"
                            android:fontFamily="@font/montaga"
                            android:text="Active"
                            android:textSize="20sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/makePaymentBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MAKE PAYMENT"></Button>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>